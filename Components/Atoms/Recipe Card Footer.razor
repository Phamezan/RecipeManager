<div class="d-flex justify-content-between p-2">
    <i class="bi bi-clock-fill"></i> @PrepTime
    <div class="d-flex">
        <span style="color:blue;"><a href="/recipes/@RecipeId"><i class="bi bi-eye-fill"></i></a></span>
        <span style="color:lightgreen;"><a href="/recipes/edit/@RecipeId"><i class="bi bi-pencil-square"></i></a></span>
        <span style="color:red;"><a href="/recipes/delete/@RecipeId"><i class="bi bi-trash3-fill"></i></a></span>
    </div>
</div>

@code {
    [Parameter]
    public string PrepTime { get; set; } = string.Empty;
    [Parameter]
    public int RecipeId { get; set; }
}