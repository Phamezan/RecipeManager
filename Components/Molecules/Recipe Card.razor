<div class="card" style="width: 18rem;">
    <Recipe_Card_Image ImageUrl="@ImageUrl" />
    <div class="card-body">
        <Recipe_Card_Header RecipeTitle="@RecipeTitle" />
        <Recipe_Card_Description Description="@RecipeDescription" />
        <Recipe_Card_Footer PrepTime="@PrepTime" RecipeId="@RecipeId" />
    </div>
</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = string.Empty;

    [Parameter]
    public string RecipeTitle { get; set; } = string.Empty;

    [Parameter]
    public string RecipeDescription { get; set; } = string.Empty;

    [Parameter]
    public string PrepTime { get; set; } = string.Empty;
    [Parameter]
    public int RecipeId { get; set; }
}