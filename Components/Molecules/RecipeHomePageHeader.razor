<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>All Recipes</h3>
    <button class="btn btn-primary"><i class="bi bi-plus">Add New Recipe</i></button>
</div>
<div class="input-group mb-3 gap-3">
        <InputText class="form-control " placeholder="Search recipes..." @bind-Value="searchedRecipe" />
        <button class="btn btn-primary "><i class="bi bi-search"></i>Search</button>
</div>

@code {
    [Parameter]
    public string searchedRecipe { get; set; } = string.Empty;
}